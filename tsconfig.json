{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["dom","es2021"],
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "target": "es2021",
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/index.ts",
    "src/serenity.ts"
  ]
}
